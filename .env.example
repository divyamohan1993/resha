# ==============================================================================
# RESHA - AI Resume Shortlisting Agent
# Environment Configuration Template
# ==============================================================================
# Copy this file to .env and update the values as needed
# ==============================================================================

# Application Settings
APP_NAME="Resha"
ENVIRONMENT="production"
DEBUG=false
PORT=22000

# Security (Auto-generated by run_project.sh, or set manually)
SECRET_KEY="replace_this_with_a_secure_random_string"
API_KEY="replace_this_with_a_secure_api_key"

# Deployment
DOMAIN_NAME="reas.dmj.one"
CONTACT_EMAIL="admin@dmj.one"

# AI/LLM Configuration (Gemini)
# Get your key from: https://aistudio.google.com/
GEMINI_API_KEY="your_gemini_api_key_here"

# Local LLM Configuration (Ollama) - Optional
# Install Ollama: https://ollama.ai
# Start: ollama serve
# Pull model: ollama pull phi3:mini
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_PREFERRED_MODEL=""
LOCAL_LLM_ENABLED=true

# Development Mode - Enables detailed reasoning chain-of-thought display
DEVELOPMENT_MODE=true
