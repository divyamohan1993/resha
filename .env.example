# Application Settings
APP_NAME="Resha"
ENVIRONMENT="production"
DEBUG=false
PORT=8000

# Security
SECRET_KEY="replace_this_with_a_secure_random_string"
API_KEY="replace_this_with_a_secure_api_key"

# Deployment
DOMAIN_NAME="resha.dmj.one"
CONTACT_EMAIL="admin@dmj.one"
DEPLOY_METHOD="docker"

# Database Configuration (MySQL)
MYSQL_ROOT_PASSWORD="secure_root_password"
MYSQL_DATABASE="resha"
MYSQL_USER="resha_app"
MYSQL_PASSWORD="secure_db_password"
MYSQL_HOST="db"
MYSQL_PORT=3306

# Database URL (Must match above credentials)
DATABASE_URL="mysql+pymysql://resha_app:secure_db_password@db:3306/resha"

# AI/LLM Configuration (Gemini)
# Get key from: https://aistudio.google.com/
GEMINI_API_KEY="your_gemini_api_key_here"

# Local LLM Configuration (Ollama)
# Base URL should be http://host.docker.internal:11434 if Ollama runs on host
OLLAMA_BASE_URL="http://host.docker.internal:11434"
OLLAMA_PREFERRED_MODEL="phi3:mini"
LOCAL_LLM_ENABLED=true

# Features
DEVELOPMENT_MODE=false
